generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./quick-status.db"
}

model Site {
  id               Int      @id @default(autoincrement())
  name             String   @unique
  url              String   @unique
  onlineChecks     Int      @default(0)
  totalChecks      Int      @default(0)
  lastResponseTime Int?     @default(0)
  lastStatus       String  @default("operational")
  lastCheckedAt    DateTime @default(now())
  outages          Outage[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

enum StatusType {
  operational
  degraded
  down
}

model Outage {
  id        Int        @id @default(autoincrement())
  siteId    Int
  startTime DateTime   @default(now())
  endTime   DateTime?
  site      Site       @relation(fields: [siteId], references: [id])
  type      OutageType
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum OutageType {
  down
  degraded
}
