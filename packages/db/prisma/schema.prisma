generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./quick-status.db"
}

model Site {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  url     String    @unique
  Outage Outage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Outage {
  id        Int       @id @default(autoincrement())
  siteId    Int
  startTime DateTime  @default(now())
  endTime   DateTime?
  site      Site      @relation(fields: [siteId], references: [id])
  type      OutageType
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum OutageType {
  down
  degraded
}
